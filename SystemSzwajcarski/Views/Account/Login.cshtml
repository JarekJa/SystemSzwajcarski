@model SystemSzwajcarski.Models.UserLogin
<h1>Logowanie</h1>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.ValidationSummary();
    <span>Login: </span>@Html.TextBoxFor(x => x.Login)
    <span>Hasło: </span>@Html.PasswordFor(x => x.Password)
    <button type="submit">Zaloguj się</button>
}

