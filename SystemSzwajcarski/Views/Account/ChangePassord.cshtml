@model SystemSzwajcarski.Models.UserPasswords
<h1>Potwierdz zmiane hasła</h1>

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
{
    @Html.ValidationSummary();
    <span>Login: </span>@Html.TextBoxFor(x => x.Login)
    <span>Stare hasło: </span>@Html.PasswordFor(x => x.OldPassword)
    <span>Nowe hasło: </span>@Html.PasswordFor(x => x.NewPassword)
    <button type="submit">Potwierdź</button>
}
