@model SystemSzwajcarski.Models.Tournaments.PlayerstoAdd
<h1>Lista zawodników do dodania</h1>
@using (Html.BeginForm("AddPlayertoTournament", "Tournaments", FormMethod.Post))
{
    @Html.HiddenFor(x => x.TournamentId)
    <ul>
        @for (int i = 0; i < Model.idRelation.Count; i++)
        {
        <li>
            @Html.HiddenFor(x => x.idRelation[i])
            <span>Imie: </span>@Model.Name[i]
            <span>  - Nazwisko: </span>@Model.LastName[i]
            <span> - Ranking: </span>@Model.Ranking[i]
            @Html.HiddenFor(x => x.ToAdd[i])
            <button type="button" id="tournamentbutton/@i" onclick="Addaplayer(@i)">Dodaj</button>
        </li>
        }
    </ul>
    <button type="submit">Zapisz</button>
}